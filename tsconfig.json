{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node", "jest", "@types/jest"],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./src/**/*"]
}
